<h1>List of users for admin</h1>

<ul>
  <% @users.each do |user| %>
    <li>
      <%= user.fname + " " + user.lname %>
      <br>
      <%= user.email %>
      <a class="admin-delete">Delete User</a>
      <div class="admin-password-confirm">
        <br>
        <%= form_tag admin_user_path(user.id), method: :delete %>
        <%= password_field_tag :password, nil, placeholder: "Password" %>
        <%= hidden_field_tag :user_id, user.id %>
        <%= submit_tag "Delete User" %>
      </div>
    </li>
  <% end %>
</ul>
<br>
<br>
<%= link_to "List of Cards", admin_credit_cards_path %>
